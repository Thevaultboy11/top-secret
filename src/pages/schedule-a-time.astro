---
import Layout from "~/layouts/PageLayout.astro";

import Header from "~/components/widgets/Header.astro";
import Hero from "~/components/widgets/Hero.astro";
import Calendly from "../components/Calendly.astro";
import { headerData } from "~/data";
import Clients from "~/components/Clients.astro";

const meta = {
  title: "Free Penetration Test",
};
---

<Layout {meta}>
  <Fragment slot="header">
    <Header {...headerData} showRssFeed showToggleTheme position="right" />
  </Fragment>

  <Hero>
    <Fragment slot="title">
      What time fits you?
      <span class="text-accent highlight mb-1"></span>
    </Fragment>
    <Fragment slot="content">
      <div class="flex w-full justify-center items-center mt-4">
        <div class="max-w-4xl p-6 bg-paper border rounded-xl shadow">
          <p class="w-full font-bold text-left text-2xl md:text-4xl">
            Quick reminder
          </p>

          <ul class="mt-4 text-left">
            <li class="mb-2 md:mb-4 text-lg md:text-xl">
              ✅ <span class="ml-2 md:ml-4"
                >We are not offering reschedules.</span
              >
            </li>
            <li class="mb-2 md:mb-4 text-lg md:text-xl">
              ✅ <span class="ml-2 md:ml-4"
                >After the call you can try implementing the new model on your
                own.</span
              >
            </li>
            <li class="mb-2 md:mb-4 text-lg md:text-xl">
              ✅ <span class="ml-2 md:ml-4"
                >If... you want to partner up and to it with us. Our experienced
                team can help you free of charge.
              </span>
            </li>
          </ul>
        </div>
      </div>
    </Fragment>
  </Hero>
  <div class="-mt-40"><Calendly /></div>
</Layout>
