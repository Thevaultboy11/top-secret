---
import { SITE } from "~/config.mjs";
import Layout from "~/layouts/PageLayout.astro";
import Cta from "~/components/Cta.astro";
import Hero from "~/components/widgets/Hero.astro";
import Note from "~/components/widgets/Note.astro";
import Features from "~/components/widgets/Features.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Steps from "~/components/widgets/Steps.astro";
import Content from "~/components/widgets/Content.astro";
import LatestPosts from "~/components/blog/LatestPosts.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import Stats from "~/components/widgets/Stats.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";
import { Picture } from "@astrojs/image/components";
import Accordion from "~/components/accordionComponent";

const meta = {
  title: "Learn more",
  description: "In this short video we will explain you our hybrid model.",
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <div
    class="flex py-40 justify-center flex-col items-center w-full mx-auto max-w-4xl"
  >
    <h1
      class="text-back text-5xl md:text-7xl font-bold leading-tighter tracking-tighter mb-4 font-heading"
    >
      New Product's Soon.
    </h1>
    <p>Something started forming, and will take shape soon.</p>
    <div class="flex gap-x-4 my-8">
      <p class="border border-black rounded-xl p-4 text-2xl bold" id="days"></p>
      <p class="border border-black rounded-xl p-4 text-2xl bold" id="hours">
      </p>
      <p class="border border-black rounded-xl p-4 text-2xl bold" id="minutes">
      </p>
      <p class="border border-black rounded-xl p-4 text-2xl bold" id="seconds">
      </p>
    </div>
    <script>
      var countDownDate = new Date("Nov 12, 2023 00:00:00").getTime();

      var countdownFunction = setInterval(function () {
        var now = new Date().getTime();
        var distance = countDownDate - now;

        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours = Math.floor(
          (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
        );
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

        document.getElementById("days").innerHTML = days;
        document.getElementById("hours").innerHTML = hours;
        document.getElementById("minutes").innerHTML = minutes;
        document.getElementById("seconds").innerHTML = seconds;

        if (distance < 0) {
          clearInterval(countdownFunction);
          document.getElementById("days").innerHTML = "";
          document.getElementById("hours").innerHTML = "";
          document.getElementById("minutes").innerHTML = "";
          document.getElementById("seconds").innerHTML = "EXPIRED";
        }
      }, 1000);
    </script>
  </div>
</Layout>
