---
import { SITE } from "~/config.mjs";
import Layout from "~/layouts/PageLayout.astro";
import Cta from "~/components/Cta.astro";
import Hero from "~/components/widgets/Hero.astro";
import Note from "~/components/widgets/Note.astro";
import Features from "~/components/widgets/Features.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Steps from "~/components/widgets/Steps.astro";
import Content from "~/components/widgets/Content.astro";
import LatestPosts from "~/components/blog/LatestPosts.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import Stats from "~/components/widgets/Stats.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";
import { Picture } from "@astrojs/image/components";
import Accordion from "~/components/accordionComponent";

const meta = {
  title: "Learn more",
  description: "In this short video we will explain you our hybrid model.",
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <section class="relative h-300 md:h-200 md:-mt-20 xl:-mt-20 mb-16">
    <img
      id="gif"
      loading="lazy"
      src="/images/about/card-aboutt3.gif"
      alt="Conference Image"
      class="w-full hidden h-full absolute object-cover object-center"
      style="box-shadow: 0px 12px 10px 0px #6929c2;"
    />
    <div
      class="absolute w-full h-full inset-0 opacity-40"
      style="background-image: linear-gradient(0deg, hsl(265deg 65% 46%) 0%, hsl(265deg 65% 46%) 13%, hsl(265deg 65% 46%) 25%, hsl(260deg 100% 29%) 37%, hsl(0deg 0% 0%) 50%, hsl(339deg 0% 0%) 63%, hsl(0deg 0% 0%) 75%, hsl(339deg 0% 0%) 87%, hsl(0deg 0% 0%) 100%);"
    >
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 pt-12">
      <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
      <div class="py-4 md:py-8">
        <div class="text-center max-w-screen-lg mx-auto">
          <p class="info-title w-full md:max-w-lg mx-auto">
            <span class="text-white select-none"
              >Lasts until end of cyber-security month!</span
            >
          </p>
          <h1
            class="cover-title text-5xl md:text-7xl font-bold leading-tighter tracking-tighter mb-4 font-heading"
          >
            Create a Cyber castle
          </h1>
        </div>
      </div>
    </div>
  </section>

  <div
    class="mt-16 md:mt-32 mx-auto relative gap-8 grid grid-cols-1 md:grid-cols-2 p-4 max-w-6xl"
  >
    <div class="bg-paper rounded-xl p-4 md:p-8">
      <h1 class="text-2xl md:text-4xl mb-4">Common Myths</h1>
      <Accordion client:only />
    </div>
    <div class="">
      <Picture
        class="mx-auto rounded-xl bg-gray-500"
        width={600}
        height={500}
        widths={[400, 768]}
        sizes="100vw, 432px"
        aspectRatio="1600:900"
        alt="sa"
        src={"/images/cta/card-cta1.png"}
      />
    </div>
  </div>
  <div class="w-full max-w-6xl mx-auto">
    <div class="max-w-xl mx-auto lg:max-w-2xl my-12">
      <div
        class="mb-10 md:mx-auto flex text-center gap-y-4 items-center justify-center flex-col md:mb-12 max-w-3xl"
      >
        <h2 class="sub-title">For executives that play the long game.</h2>
        <p class="max-w-3xl mx-auto sm:text-center text-xl text-muted"></p>
      </div>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 my-8 gap-8 md:gap-4 mb-16 max-w-3xl mx-auto p-4"
    >
      <div
        class="bg-paper px-12 py-8 flex flex-col justify-center items-center gap-y-8 h-full mb-4 rounded-xl"
      >
        <h1
          class="text-2xl text-secondary text-center font-bold tracking-tight mb-2"
        >
          Time Travel To A Secure Startup
        </h1>
        <Picture
          class="mx-auto rounded-xl -rotate-12"
          width={200}
          height={200}
          widths={[400, 768]}
          sizes="100vw, 432px"
          aspectRatio="400:400"
          alt="sa"
          src={"/images/cta/card-cta3.png"}
        />
        <ul style="list-style-type: disc;" class="text-base w-full md:w-5/6">
          <li class="mb-4 font-bold text-secondary">
            For Newly Founded Startups
          </li>
          <li>
            <b>FACT:</b>
            <b>66%</b> of SMB's go down after experiencing a data breach and
            <b>43%</b> lack any type of cybersecurity defense plan.
          </li>
        </ul>
        <a
          href="/cyber-castle/startup-security"
          class="cta-button-secondary-sm md:w-40">Claim Now</a
        >
      </div>
      <div
        class="bg-paper px-12 py-8 flex flex-col justify-center items-center gap-y-8 h-full mb-4 rounded-xl"
      >
        <h1
          class="text-2xl text-primary text-center font-bold tracking-tight mb-2"
        >
          Scale to Riches With Us
        </h1>
        <Picture
          class="mx-auto rounded-xl rotate-12"
          width={200}
          height={200}
          widths={[400, 768]}
          sizes="100vw, 432px"
          aspectRatio="400:400"
          alt="sa"
          src={"/images/cta/card-cta2.png"}
        />
        <ul style="list-style-type: disc;" class="text-base w-full md:w-5/6">
          <li class="mb-4 font-bold text-primary">
            For Large Businesses That Want To Scale
          </li>
          <li>
            <b>FACT:</b>
            <b>60%</b> of large businesses experienced a data breach in the last
            year and <b>70%</b> of do not have a cybersecurity plan in place.
          </li>
        </ul>
        <a href="/cyber-castle/scaling-security" class="cta-button-sm md:w-40"
          >Claim Now</a
        >
      </div>
    </div>
  </div>

  <script>
    // Function to show the GIF when it's loaded
    function showGif() {
      document.getElementById("gif")?.classList.toggle("hidden");
      document.getElementById("picture")?.classList.toggle("hidden");
    }

    // Create a JavaScript Image object to preload the GIF
    var gifImage = new Image();
    gifImage.src = "/images/about/card-aboutt3.gif"; // Set the path to your GIF image
    gifImage.onload = showGif; // When the GIF is loaded, call the showGif function
  </script>
</Layout>
