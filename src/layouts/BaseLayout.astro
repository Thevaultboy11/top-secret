---
import "~/assets/styles/base.css";

import MetaTags from "~/components/common/MetaTags.astro";
import BasicScripts from "~/components/common/BasicScripts.astro";

import { MetaSEO } from "~/types";
import { SITE } from "~/config.mjs";
import Clients from "~/components/Clients.astro";

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = "en", textDirection = "ltr" } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
  </head>

  <body class="antialiased text-page bg-light tracking-tight">
    <div
      id="modal-backdrop"
      class="fixed inset-0 overflow-hidden bg-black bg-opacity-50 z-20 hidden"
    >
    </div>

    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>

    <Clients />
  </body>
</html>
